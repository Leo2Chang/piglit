[require]
GLSL >= 1.10

[vertex shader]
varying vec4 color;
uniform vec2 arg0;

void main()
{
  gl_Position = gl_Vertex;
  float result = length(arg0);
  result -= 0.354633394207;
  result *= 0.882845191068;
  color = vec4(result, 0.0, 0.0, 0.0);
}

[fragment shader]
varying vec4 color;

void main()
{
  gl_FragColor = color;
}

[test]
uniform vec2 arg0 -0.1 -1.2
draw rect -1 -1 2 2
probe rgba 0 0 0.75 0.0 0.0 0.0
uniform vec2 arg0 -0.42 0.48
draw rect -1 -1 2 2
probe rgba 1 0 0.25 0.0 0.0 0.0
