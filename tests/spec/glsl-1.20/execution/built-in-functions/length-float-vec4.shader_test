[require]
GLSL >= 1.10

[vertex shader]
varying vec4 color;
uniform vec4 arg0;

void main()
{
  gl_Position = gl_Vertex;
  float result = length(arg0);
  result -= -0.0419444927186;
  result *= 0.249385219337;
  color = vec4(result, 0.0, 0.0, 0.0);
}

[fragment shader]
varying vec4 color;

void main()
{
  gl_FragColor = color;
}

[test]
uniform vec4 arg0 -1.65 1.33 1.93 0.76
draw rect -1 -1 2 2
probe rgba 0 0 0.75 0.0 0.0 0.0
uniform vec4 arg0 0.8 -0.15 -0.51 0.0
draw rect -1 -1 2 2
