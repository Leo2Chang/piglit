[require]
GLSL >= 1.20

[vertex shader]
varying vec4 color;
uniform mat4x2 arg0;
uniform int column;

void main()
{
  gl_Position = gl_Vertex;
  mat2x4 result = transpose(arg0);
  result -= -3.41;
  result *= 0.140449438202;
  color = vec4(result[column]);
}

[fragment shader]
varying vec4 color;

void main()
{
  gl_FragColor = color;
}

