[require]
GLSL >= 1.10

[vertex shader]
varying vec4 color;
uniform vec3 arg0;

void main()
{
  gl_Position = gl_Vertex;
  vec3 result = fract(arg0);
  result -= -0.333333333333;
  result *= 0.75;
  color = vec4(result, 0.0);
}

[fragment shader]
varying vec4 color;

void main()
{
  gl_FragColor = color;
}

[test]
uniform vec3 arg0 -2.0 -0.666666666667 0.666666666667
draw rect -1 -1 2 2
probe rgba 0 0 0.25 0.5 0.75 0.0
uniform vec3 arg0 2.0 -2.0 -0.666666666667
draw rect -1 -1 2 2
probe rgba 1 0 0.25 0.25 0.5 0.0
