[require]
GLSL >= 1.20

[vertex shader]
#version 120
varying vec4 color;
uniform vec2 arg0;
uniform vec2 arg1;
uniform int column;

void main()
{
  gl_Position = gl_Vertex;
  mat2 result = outerProduct(arg0, arg1);
  result -= -1.584;
  result *= 0.248015873016;
  color = vec4(result[column], 0.0, 0.0);
}

[fragment shader]
#version 120
varying vec4 color;

void main()
{
  gl_FragColor = color;
}

