[require]
GLSL >= 1.10

[vertex shader]
varying vec4 color;
uniform vec3 arg0;

void main()
{
  gl_Position = gl_Vertex;
  vec3 result = cos(arg0);
  result -= -1.75;
  result *= 0.333333333333;
  color = vec4(result, 0.0);
}

[fragment shader]
varying vec4 color;

void main()
{
  gl_FragColor = color;
}

[test]
uniform vec3 arg0 -3.14159265359 -1.0471975512 1.0471975512
draw rect -1 -1 2 2
