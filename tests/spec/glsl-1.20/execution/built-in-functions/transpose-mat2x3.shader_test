[require]
GLSL >= 1.20

[vertex shader]
varying vec4 color;
uniform mat2x3 arg0;
uniform int column;

void main()
{
  gl_Position = gl_Vertex;
  mat3x2 result = transpose(arg0);
  result -= -2.875;
  result *= 0.155763239875;
  color = vec4(result[column], 0.0, 0.0);
}

[fragment shader]
varying vec4 color;

void main()
{
  gl_FragColor = color;
}

