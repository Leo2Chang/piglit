[require]
GLSL >= 1.10

[vertex shader]
varying vec4 color;
uniform vec2 arg0;

void main()
{
  gl_Position = gl_Vertex;
  vec2 result = tan(arg0);
  result -= -3.46410161514;
  result *= 0.144337567297;
  color = vec4(result, 0.0, 0.0);
}

[fragment shader]
varying vec4 color;

void main()
{
  gl_FragColor = color;
}

[test]
uniform vec2 arg0 -3.14159265359 -1.0471975512
draw rect -1 -1 2 2
probe rgba 0 0 0.5 0.25 0.0 0.0
uniform vec2 arg0 1.0471975512 3.14159265359
draw rect -1 -1 2 2
probe rgba 0 0 0.75 0.5 0.0 0.0
