[require]
GLSL >= 1.10

[vertex shader]
varying vec4 color;
uniform float arg0;

void main()
{
  gl_Position = gl_Vertex;
  float result = sin(arg0);
  result -= -1.73205080757;
  result *= 0.288675134595;
  color = vec4(result, 0.0, 0.0, 0.0);
}

[fragment shader]
varying vec4 color;

void main()
{
  gl_FragColor = color;
}

