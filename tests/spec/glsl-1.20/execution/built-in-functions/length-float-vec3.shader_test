[require]
GLSL >= 1.10

[vertex shader]
varying vec4 color;
uniform vec3 arg0;

void main()
{
  gl_Position = gl_Vertex;
  float result = length(arg0);
  result -= 0.605229407754;
  result *= 0.377389462438;
  color = vec4(result, 0.0, 0.0, 0.0);
}

[fragment shader]
varying vec4 color;

void main()
{
  gl_FragColor = color;
}

[test]
uniform vec3 arg0 -0.03 -0.85 -0.94
draw rect -1 -1 2 2
probe rgba 0 0 0.25 0.0 0.0 0.0
