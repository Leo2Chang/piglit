[require]
GLSL >= 1.10

[vertex shader]
varying vec4 color;
uniform vec2 arg0;
uniform vec2 arg1;

void main()
{
  gl_Position = gl_Vertex;
  float result = distance(arg0, arg1);
  result -= -0.855102333057;
  result *= 0.292362668578;
  color = vec4(result, 0.0, 0.0, 0.0);
}

[fragment shader]
varying vec4 color;

void main()
{
  gl_FragColor = color;
}

