[require]
GLSL >= 1.10

[vertex shader]
varying vec4 color;
uniform vec3 arg0;

void main()
{
  gl_Position = gl_Vertex;
  vec3 result = sign(arg0);
  result -= -2.0;
  result *= 0.25;
  color = vec4(result, 0.0);
}

[fragment shader]
varying vec4 color;

void main()
{
  gl_FragColor = color;
}

[test]
uniform vec3 arg0 -1.5 -0.75 0.0
draw rect -1 -1 2 2
probe rgba 0 0 0.25 0.25 0.5 0.0
uniform vec3 arg0 0.75 1.5 -1.5
draw rect -1 -1 2 2
probe rgba 0 0 0.75 0.75 0.25 0.0
