[require]
GLSL >= 1.20

[vertex shader]
#version 120
varying vec4 color;
uniform mat2 arg0;
uniform int column;

void main()
{
  gl_Position = gl_Vertex;
  mat2 result = transpose(arg0);
  result -= -2.9;
  result *= 0.166666666667;
  color = vec4(result[column], 0.0, 0.0);
}

[fragment shader]
#version 120
varying vec4 color;

void main()
{
  gl_FragColor = color;
}

