[require]
GLSL >= 1.10

[vertex shader]
varying vec4 color;
uniform vec4 arg0;

void main()
{
  gl_Position = gl_Vertex;
  vec4 result = radians(arg0);
  result -= -6.28318530718;
  result *= 0.0795774715459;
  color = vec4(result);
}

[fragment shader]
varying vec4 color;

void main()
{
  gl_FragColor = color;
}

[test]
uniform vec4 arg0 -180.0 -60.0 60.0 180.0
draw rect -1 -1 2 2
probe rgba 0 0 0.25 0.416666666667 0.583333333333 0.75
