[require]
GLSL >= 1.10

[vertex shader]
varying vec4 color;
uniform bvec2 arg0;

void main()
{
  gl_Position = gl_Vertex;
  bool result = all(arg0);
  color = vec4(result, 0.0, 0.0, 0.0);
}

[fragment shader]
varying vec4 color;

void main()
{
  gl_FragColor = color;
}

[test]
uniform ivec2 arg0 0 0
draw rect -1 -1 2 2
probe rgba 0 0 0 0 0 0
uniform ivec2 arg0 0 1
draw rect -1 -1 2 2
probe rgba 1 0 0 0 0 0
uniform ivec2 arg0 1 0
draw rect -1 -1 2 2
probe rgba 2 0 0 0 0 0
uniform ivec2 arg0 1 1
draw rect -1 -1 2 2
probe rgba 3 0 1 0 0 0
