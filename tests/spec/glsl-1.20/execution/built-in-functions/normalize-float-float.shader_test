[require]
GLSL >= 1.10

[vertex shader]
varying vec4 color;
uniform float arg0;

void main()
{
  gl_Position = gl_Vertex;
  float result = normalize(arg0);
  result -= -2.0;
  result *= 0.25;
  color = vec4(result, 0.0, 0.0, 0.0);
}

[fragment shader]
varying vec4 color;

void main()
{
  gl_FragColor = color;
}

[test]
uniform float arg0 -1.33
draw rect -1 -1 2 2
probe rgba 0 0 0.25 0.0 0.0 0.0
uniform float arg0 0.85
draw rect -1 -1 2 2
probe rgba 1 0 0.75 0.0 0.0 0.0
