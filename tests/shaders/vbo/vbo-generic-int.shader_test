[require]
GLSL >= 1.30
GL >= 2.1

[vertex shader]
#version 130
attribute int foo;
attribute ivec2 bar;

void main()
{
	gl_Position = gl_ModelViewProjectionMatrix * gl_Vertex;
	gl_FrontColor = vec4(foo/10.0, bar, 1.0);
}

[fragment shader]
#version 130
void main()
{
	gl_FragColor = gl_Color;
}

[vertex data]
gl_Vertex/float/3 foo/int/1 bar/int/2
0.0 0.0 0.0       10        0 0
0.0 1.0 0.0        5        1 1
1.0 1.0 0.0        0        0 1

[test]
ortho 0.0 1.0 0.0 1.0
clear color 0.0 0.0 0.0 0.0
clear
draw arrays GL_TRIANGLES 0 3
