void main()
{
	gl_Position = gl_ModelViewProjectionMatrix * gl_Vertex;
	gl_FrontColor = vec4(gl_FogCoord, gl_FogCoord, gl_FogCoord, 1.0);
}

[fragment shader]
void main()
{
