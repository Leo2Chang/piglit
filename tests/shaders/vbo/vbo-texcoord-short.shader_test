[require]
GLSL >= 1.10
GL >= 2.1

[vertex shader]
void main()
{
	gl_Position = gl_ModelViewProjectionMatrix * gl_Vertex;
	gl_FrontColor = vec4(gl_MultiTexCoord0.x/10000.0,
	                     gl_MultiTexCoord7.xy/10000.0,
	                     1.0);
}

[fragment shader]
void main()
{
	gl_FragColor = gl_Color;
}

[vertex data]
gl_Vertex/float/3 gl_MultiTexCoord0/short/1 gl_MultiTexCoord7/short/2
0.0 0.0 0.0       0                         0     10000
0.0 1.0 0.0       0                         10000 10000
1.0 1.0 0.0       10000                     10000     0

